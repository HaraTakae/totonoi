<div style="background-color: #f2f2f2;">
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="sidebar col-md-3">
      <h2>マイページ</h2>
        <table class='table'>
          <tr>
            <th>ニックネーム</th>
            <th><%= @user.name %></th>
          </tr>
        </table>

      <% unless @user.guest_user? %>
        <% if @user == current_user %>
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
      <% end %>
      <%= image_tag "user.png", width: '280', height: '300' %>
    </div>
     
    <div class="col-md-8 px-sm-0 offset-md-1 mt-3 mb-4">
      <h4 class="font-noto">投稿一覧</h4>
      <div class ="card mb-2">
        <div class="card-body">
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th class="font-noto">施設名</th>
                <th class="font-noto"><i class="fa-solid fa-location-dot"></i>エリア</th>
                <th colspan="4"></th>
              </tr>
            </thead>
            <tbody>
              <% @facility_posts.each do |facility_post| %>
                <tr>
                  <td class="font-noto"><%= link_to facility_post.name,facility_post %></td>
                  <td class="font-noto"><%= facility_post.area.name%></td>
                  <td class="font-noto">コメント数: <%= facility_post.comments.count %></td>
                  <td class="font-noto">いいね数: <%= facility_post.favorites.count %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      
      <h4 class="font-noto">コメント一覧</h4>
      <% @comments.each do |comment| %>
        <%= link_to user_path(comment.user) do %>
          <div class="card mb-2">
            <div class="card-body">
              <p class="font-noto" style="color: black;"><strong><%= comment.user.name%>:</strong> <%= comment.comment %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>