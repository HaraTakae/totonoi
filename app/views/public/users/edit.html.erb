<div class="container">
  <div class="row mt-4">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>名前変更</h2>
    </div>

    <!--編集エラーメッセージ-->
  <% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  </div>
  <div class="row">
    <div class="col-sm-12 px-sm-0 mx-auto mb-5">
      <%= form_with model: @user, url: user_path, local: true do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <th>名前</th>
            <td><%= f.text_field :name, placeholder:"名前" %></td>
          </div>
          <div class="form-action">
            <th><%= f.submit "新規登録", class: "btn btn-success" %></th>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
